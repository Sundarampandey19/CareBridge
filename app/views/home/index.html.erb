<h1>Hey there</h1>
<% if user_signed_in? %>
  <%= link_to destroy_user_session_path, data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to sign out?" }, class: "block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
    <i class="fa-solid fa-sign-out mr-2"></i> <span class="hidden md:inline-block">Sign out</span>
  <% end %>
<% else %>
  <%= link_to new_user_session_path, class: "block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
    <i class="fa-solid fa-sign-in mr-2"></i> <span class="hidden md:inline-block">Sign in</span>
  <% end %>
<% end %>