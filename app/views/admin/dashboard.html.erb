<div class="max-w-7xl mx-auto">
  <!-- Dashboard Heading -->
  <h1 class="text-center text-4xl font-bold mt-10 mb-8">Admin Dashboard</h1>

  <!-- User Statistics Section -->
  <div class="w-full text-center mb-12">
    <h2 class="text-2xl font-semibold mb-4">User Registration Statistics</h2>
    <div class="border border-gray-300 p-6 rounded shadow-lg bg-white">
      <%= line_chart User.group_by_day(:created_at).count, height: "500px", width: "100%" %>
    </div>
  </div>

  <!-- User Management Section -->
  <div class="flex justify-center mb-12">
    <div class="w-full max-w-lg">
      <h2 class="text-2xl font-semibold mb-4 text-center">Manage Users</h2>
      <div class="flex justify-between space-x-4">
        <!-- Show Users Button -->
        <%= link_to admin_users_path, class: "block w-full text-center border px-4 py-2 rounded bg-gray-200 hover:bg-gray-700 hover:text-white transition-all duration-200" do %>
          Show Users
        <% end %>
        <!-- Add User Button -->
        <%= link_to new_admin_user_path, class: "block w-full text-center border px-4 py-2 rounded bg-green-200 hover:bg-green-700 hover:text-white transition-all duration-200" do %>
          Add a User
        <% end %>
      </div>
    </div>
  </div>

  <!-- Other Sections (if any) -->
  <div class="w-full text-center mb-12">
    <h2 class="text-2xl font-semibold mb-4">Other Features</h2>
    <p class="text-gray-600">More features will be available soon.</p>
  </div>
</div>
