<div class="max-w-7xl mx-auto">
  <!-- Dashboard Header with button aligned to the right -->
  <div class="flex justify-between items-center mt-10 mb-8">
    <!-- Smaller Heading aligned to the left -->
    <h1 class="text-2xl font-semibold">Doctor's Dashboard</h1>

    <!-- Smaller Button aligned to the right -->
    <%= link_to 'View Today\'s Appointments', doctor_new_page_path, class: "inline-block bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-600 transition duration-200 text-sm" %>
  </div>

  <!-- User Registration Statistics Section -->
  <div class="w-full text-center mb-12">
    <h2 class="text-xl font-semibold mb-4">User Registration Statistics</h2>
    <div class="border border-gray-300 p-6 rounded shadow-lg bg-white">
      <%= line_chart User.group_by_day(:created_at).count, height: "500px", width: "100%" %>
    </div>
  </div>
</div>
